{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=localhost;Initial Catalog=RealTimeChatApp_Test;User ID=testuser;Password=YourStrongPassword123;Encrypt=True;TrustServerCertificate=True",
    "RedisConnection": "redis://test-redis-host:6379,password=YourRedisPasswordHere,abortConnect=false"
  },
  "RabbitMQ": {
    "User": "testuser",
    "Password": "YourRabbitPasswordHere",
    "Port": "5672",
    "Uri": "amqps://testuser:YourRabbitPasswordHere@test.rabbitmq.server/testvhost",
    "QueueName": "chat-messages-save-test"
  },
  "JwtSettings": {
    "Key": "TestJwtKey_1234567890!@#",
    "Issuer": "TestApp",
    "Audience": "TestAppUsers",
    "AccessTokenExpireMinutes": 20,
    "RefreshTokenExpireDays": 1,
    "RefreshTokenCleanupIntervalMinutes": 1440
  },
  "WorkerAuth": {
    "ServiceUser": "WorkerService",
    "ServiceSecret": "TestSecret123*"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Properties": {
      "Application": "RealTimeChatApp_Test"
    }
  }
}
